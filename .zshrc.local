# Own zshrc config adding to the grml-zshrc. Download it with your package manager.
# Own aliases
# Convenience
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias findn='find . -iname '
# Git
alias gs='git status '
#show only staged (first m) and changed files
alias gss='gs -s| grep "^[^?][^?]"'
alias gh='git hist '
alias gha='git hist --all '
alias ga='git add '
alias gb='git branch '
alias gc='git commit '
alias gcm='git commit -m '
alias gd='git diff '
alias go='git checkout '
alias gk='gitk --all&'
alias gx='gitx --all '
alias gcam='git commit -a -m '
# Install programs
alias sapti='sudo aptitude install '
# Music
alias cd2flac='abcde -c ~/.abcde_flac.conf'
# Install programs
alias sa='sudo aptitude '
alias sapti='sudo aptitude install '
# vim
# open new files in already running session of gvim
alias gvim='gvim --remote-silent '
# open the session file (I always name these .sess)
alias vims='vim -S .sess '
# graphics magick
alias gmc='gm convert '
alias crop='gm convert - -gravity Center -crop '
# makes you look busy
alias busy='rnd_file=$(find /usr/include -type f -size +5k | sort -R | head -n 1) && vim +$((RANDOM%$(wc -l $rnd_file | cut -f1 -d" "))) $rnd_file'

# typos
alias lÂ¿='ls ' # Haha, Neo. ;)

# system
alias standby='systemctl suspend'

# Arch
alias pacman='pacman-color'
compdef _pacman pacman-color=pacman
compdef _yaourt yaourt=pacman

# ls colors solarized
eval `dircolors ~/.config/terminator/solarized/dircolors.ansi-dark`

