! To only apply colors to your terminal, for example, prefix
! the color assignment statement with its name. Example:
!
! URxvt*background:            S_base03

*background:              S_base03
*foreground:              S_base0
*fading:                  25
*fadeColor:               S_base03
*cursorColor:             S_base1
*pointerColorBackground:  S_base01
*pointerColorForeground:  S_base1

*color0:                  S_base02
*color1:                  S_red
*color2:                  S_green
*color3:                  S_yellow
*color4:                  S_blue
*color5:                  S_magenta
*color6:                  S_cyan
*color7:                  S_base2
*color8:                  S_base03
*color9:                  S_orange
*color10:                 S_base01
*color11:                 S_base00
*color12:                 S_base0
*color13:                 S_violet
*color14:                 S_base1
*color15:                 S_base3

!-!

!! Emacs settings

Emags.font: Inconsolata

!! urxvt settings

! General
URxvt.termName:         rxvt-unicode-256color
URxvt.saveLines:        65535
URxvt.loginShell:       true
URxvt.meta: 		super

! Behaviour
URxvt.scrollBar:        off
URxvt.jumpScroll:       true

URxvt.secondaryScreen:  true
URxvt.secondaryScroll:  false
URxvt.scrollstyle:      plain
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! GUI
URxvt.borderless:       true
URxvt.internalBorder:   5
URxvt.cursorBlink:      false
URxvt.cursorUnderline:  true
URxvt.font:             xft:Inconsolata-11, xft:PowerlineSymbols-11
!, xft:Monospace-11
URxvt.boldFont:         xft:Inconsolata-11:bold
!, xft:Monospace-11:bold
URxvt.italicFont:       xft:Inconsolata-11:italic
!, xft:Monospace-11:italic
URxvt.bolditalicFont:   xft:Inconsolata-11:bold:italic
!, xft:Monospace-11:bold:italic

! Extensions
URxvt.perl-lib:         /usr/lib/urxvt/perl/
URxvt.perl-ext-common:  default,confirm-paste,url-select,clipboard,vtwheel
! Links
URxvt.url-select.launcher:  /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.colorUL:          S_yellow
URxvt.matcher.button:   1
URxvt.keysym.M-u:       perl:url-select:select_next
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
! fix it
URxvt.intensityStyles: 	false

