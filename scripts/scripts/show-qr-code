#!/usr/bin/env nix-shell
#!nix-shell -i sh -p qrencode gtkdialog

TMP=$(mktemp)
qrencode -s 8 -o $TMP -t PNG ${1}

export DIALOG='
<vbox>
    <pixmap>
        <input file>'${TMP}'</input>
    </pixmap>
</vbox>
'

#gtkdialog --dialog --program=DIALOG > /dev/null &
gtkdialog --program=DIALOG > /dev/null &

sleep 0.2

rm ${TMP}
