#!/usr/bin/env python2

import sys
import urllib

token = 'mx30P7XDLsYfkXBqLXl0aSUD60oLzMEx'

if __name__ == '__main__':
    
    action = ''

    try:
        action = sys.argv[1]
    except:
        sys.exit('usage: doorctl open/close/state')

    try:
        http_obj = urllib.urlopen('https://labctl.ffa/sphincter/?action='+action+'&token='+token)
        result = http_obj.read()

        print 'response: ' + result
    
    except IOError:
        sys.exit('could not reach host')
